<?xml version="1.0" encoding="utf-8"?>
<Containers>
	<Date>2021-03-08</Date>
	<Beta>False</Beta>
	<Name>Valheim</Name>
	<Project>https://github.com/lloesche/valheim-server-docker</Project>
	<Overview>
		Valheim game server.
	</Overview>
	<Description>
		Valheim game server.
	</Description>
	<Registry>https://hub.docker.com/r/lloesche/valheim-server</Registry>
	<GitHub>https://github.com/lloesche/valheim-server-docker</GitHub>
	<Repository>lloesche/valheim-server:latest</Repository>
	<Privileged>false</Privileged>
	<Icon>https://raw.githubusercontent.com/adammillerio/docker-templates/master/icons/Valheim.png</Icon>
	<BindTime>true</BindTime>
	<ExtraParams>--cap-add=sys_nice</ExtraParams>
	<Environment>
		<Variable>
			<Name>SERVER_NAME</Name>
			<Value>Valheim</Value>
		</Variable>
		<Variable>
			<Name>WORLD_NAME</Name>
			<Value>Valheim</Value>
		</Variable>
		<Variable>
			<Name>SERVER_PASS</Name>
			<Value>asswordp</Value>
		</Variable>
		<Variable>
			<Name>SERVER_PUBLIC</Name>
			<Value>false</Value>
		</Variable>
		<Variable>
			<Name>UPDATE_CRON</Name>
			<Value>*/15 * * * *</Value>
		</Variable>
		<Variable>
			<Name>UPDATE_IF_IDLE</Name>
			<Value>true</Value>
		</Variable>
		<Variable>
			<Name>RESTART_CRON</Name>
			<Value>0 5 * * *</Value>
		</Variable>
		<Variable>
			<Name>TZ</Name>
			<Value>Etc/UTC</Value>
		</Variable>
		<Variable>
			<Name>BACKUPS</Name>
			<Value>true</Value>
		</Variable>
		<Variable>
			<Name>BACKUPS_CRON</Name>
			<Value>0 * * * *</Value>
		</Variable>
		<Variable>
			<Name>BACKUPS_MAX_AGE</Name>
			<Value>3</Value>
		</Variable>
	</Environment>
	<Data>
		<Volume>
			<HostDir>/mnt/user/appdata/Valheim/config</HostDir>
			<ContainerDir>/config</ContainerDir>
			<Mode>rw</Mode>
		</Volume>
		<Volume>
			<HostDir>/mnt/user/appdata/Valheim/data</HostDir>
			<ContainerDir>/opt/valheim</ContainerDir>
			<Mode>rw</Mode>
		</Volume>
	</Data>
	<Networking>
		<Mode>bridge</Mode>
		<Publish>
			<Port>
				<HostPort>2456</HostPort>
				<ContainerPort>2456</ContainerPort>
				<Protocol>udp</Protocol>
			</Port>
			<Port>
				<HostPort>2457</HostPort>
				<ContainerPort>2457</ContainerPort>
				<Protocol>udp</Protocol>
			</Port>
			<Port>
				<HostPort>2458</HostPort>
				<ContainerPort>2458</ContainerPort>
				<Protocol>udp</Protocol>
			</Port>
		</Publish>
	</Networking>
</Containers>